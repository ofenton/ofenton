#!/bin/bash

# Initial setup for git
#git init

echo "set global details"
# Set email address
git config --global user.email "oliver.fenton@gmail.com"
# And verify
git config --global user.email

# Set
git config --global user.name "ofenton"
# And verify
git config --global user.name

echo "set local details"
git config --local user.email "oliver.fenton@gmail.com"
git config --local user.email

git config --local user.name "ofenton"
git config --local user.name
